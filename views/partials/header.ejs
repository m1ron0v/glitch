<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Менеджер Telegram Ботів</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><i class="fas fa-robot me-2"></i>Менеджер Ботів</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/"><i class="fas fa-list me-1"></i>Список ботів</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/bots/add"><i class="fas fa-plus-circle me-1"></i>Додати бота</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4 mb-5"> 
    </div> <footer class="footer">
        <div class="container">
            <span>&copy; <%= new Date().getFullYear() %> Мій Додаток. Glitch.</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        async function getBotProcessStatus(dbId, botInternalId) {
            const statusElement = document.getElementById(`status-text-${botInternalId}`);
            const indicatorElement = document.getElementById(`status-indicator-${botInternalId}`); // Це старий span, який ми змінимо
            const statusBadge = document.getElementById(`status-badge-${botInternalId}`);


            if (statusElement) statusElement.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Оновлення...';
            if (statusBadge) { // Очищаємо старі класи badge
                 statusBadge.className = 'badge';
            }


            try {
                const response = await fetch(`/bots/process-status/${dbId}`);
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                const data = await response.json();
                
                let statusText = `Статус процесу: ${data.status}`;
                if (data.message) statusText += ` (${data.message})`;
                if (statusElement) statusElement.textContent = statusText;

                if (statusBadge) {
                    statusBadge.textContent = data.status.toUpperCase();
                    if (data.status === 'running') {
                        statusBadge.classList.add('bg-success');
                    } else if (data.status === 'stopped') {
                        statusBadge.classList.add('bg-danger');
                    } else if (data.status === 'error') {
                        statusBadge.classList.add('bg-warning', 'text-dark');
                    } else if (data.status === 'starting') {
                        statusBadge.classList.add('bg-info', 'text-dark');
                    } else {
                        statusBadge.classList.add('bg-secondary');
                    }
                }

            } catch (error) {
                console.error('Error fetching bot process status:', error);
                if (statusElement) statusElement.textContent = 'Помилка отримання статусу процесу.';
                if (statusBadge) {
                    statusBadge.textContent = 'ПОМИЛКА';
                    statusBadge.classList.add('bg-dark');
                }
            }
        }
    </script>
</body>
</html>
